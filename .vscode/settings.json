{
  "files.associations": {
    "**/.dockerignore": "ignore",
    "**/.ini": "properties",
    "**/docker-compose.*.yml": "dockercompose"
  },
  "files.exclude": {
    "**/__pycache__/**": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true,
    "**/.tox/**": true,
    "**/.venv/**": true
  },
  "editor.wordWrapColumn": 90,
  "editor.minimap.maxColumn": 90,
  "editor.rulers": [90],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "prettier.prettier-vscode",
  "python.analysis.autoFormatStrings": true,
  "python.analysis.extraPaths": ["server"],
  "flake8.args": ["--max-line-length=90"],
  "flake8.cwd": "${workspaceFolder}/server",
  "mypy.enabled": true,
  "mypy.runUsingActiveInterpreter": true,
  "mypy.configFile": "server/pyproject.toml",
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit",
      "source.unusedImports": "explicit"
    }
  },
  "python.testing.pytestArgs": [
    "--cov",
    "api",
    "--cov-report",
    "xml:coverage.xml"
  ],
  "python.testing.cwd": "${workspaceFolder}/server",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true
}
